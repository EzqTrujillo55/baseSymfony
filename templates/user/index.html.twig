{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>Restringir Transacciones</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Transacciona</th>
                <th>Acciones Transacciona</th>
                <th>Perfil</th>
                <th>Usuario</th>
                <th>Puede conectarse</th>


                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>
                    {{ user.usTransacciona }}

                </td>
                <td>
                    <a class="btn btn-success" href="{{path('habilitar', {'id': user.id})}}">Habilitar</a>
