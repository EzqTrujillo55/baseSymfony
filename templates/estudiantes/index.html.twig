{% extends 'base.html.twig' %}

{% block title %}Estudiantes index{% endblock %}

{% block body %}
    <h1>Estudiantes index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Apellido</th>
                <th>Email</th>
                <th>Nacimiento</th>
                <th>Cedula</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for estudiante in estudiantes %}
            <tr>
                <td>{{ estudiante.id }}</td>
                <td>{{ estudiante.name }}</td>
                <td>{{ estudiante.apellido }}</td>
                <td>{{ estudiante.email }}</td>
                <td>{{ estudiante.nacimiento ? estudiante.nacimiento|date('Y-m-d') : '' }}</td>
                <td>{{ estudiante.cedula }}</td>
                <td>
                    <a href="{{ path('estudiantes_show', {'id': estudiante.id}) }}">show</a>
                    <a href="{{ path('estudiantes_edit', {'id': estudiante.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('estudiantes_new') }}">Create new</a>
{% endblock %}
