                    <a class="btn btn-warning far fa-eye" href="{{ path('user_show', {'id': user.id}) }}"></a>
                    <a class="btn btn-success fas fa-pencil-alt" href="{{ path('user_edit', {'id': user.id}) }}"></a>
                    <a href="{{ path('prueba') }}">ss</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="17">no records found</td>
            </tr>
